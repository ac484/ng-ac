{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem",
      "D:\\firebase\\ng-ac",
      "D:\\firebase\\ng-ac\\.cursor",
      "D:\\firebase\\ng-ac\\.devcontainer",
      "D:\\firebase\\ng-ac\\.github",
      "D:\\firebase\\ng-ac\\.kiro",
      "D:\\firebase\\ng-ac\\.vscode",
      "D:\\firebase\\ng-ac\\custom_modes",
      "D:\\firebase\\ng-ac\\docs",
      "D:\\firebase\\ng-ac\\public",
      "D:\\firebase\\ng-ac\\src",
      "D:\\firebase\\ng-ac\\memory-bank"
    ],
      "disabled": true,
      "autoApprove": [
        "list_allowed_directories",
        "list_directory",
        "directory_tree",
        "create_directory",
        "write_file",
        "read_file",
        "edit_file",
        "delete_file",
        "move_file",
        "copy_file",
        "search_files"
      ]
    },
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ],
      "env": {},
      "disabled": false,
      "autoApprove": [
        "fetch"
      ]
    },
        "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp"
      ],
      "env": {}
    },
      "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=2048"
      },
      "disabled": false,
      "autoApprove": [
        "resolve-library-id",
        "get-library-docs"
      ]
    },

    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {
        "MEMORY_FILE_PATH": "./memory-bank/memory.json",
        "NODE_OPTIONS": "--max-old-space-size=2048"
      },
      "disabled": false,
      "autoApprove": []
    },
    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "env": {
        "NODE_OPTIONS": "--max-old-space-size=1024"
      },
      "disabled": false,
      "autoApprove": [
        "sequentialthinking"
      ]
    }


  }
}
